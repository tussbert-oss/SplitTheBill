<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Existing permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Add this line for Android 13+ notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.SplitITApp">

        <!-- All your activities -->
        <activity android:name=".ForOptionEqually" android:exported="false" />
        <activity android:name=".ForOptionCustomize" android:exported="false" />
        <activity android:name=".ByOption" android:exported="false" />
        <activity android:name=".PrivacyAndSupport" android:exported="false" />
        <activity android:name=".Accounts" android:exported="false" />
        <activity android:name=".Home" android:exported="false" />
        <activity android:name=".Register" android:exported="false" />
        <activity android:name=".BillDetailsActivity" android:exported="false" />
        <activity android:name=".HistoryActivity" android:exported="false" />
        <activity android:name=".Login" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:exported="false" />

        <!-- Broadcast Receiver -->
        <receiver android:name=".DueDateReceiver" android:exported="false" />

    </application>
</manifest>
